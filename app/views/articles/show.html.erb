<div class="container-fluid">
    <div class="row">
        <div id='textarea' class="col-sm-10 offset-sm-1">
            <!-- jsでarticleのidを受け取る用（hiddenで非表示）-->
            <input type="hidden" value="<%= @article.id %>" class="articleID">
            <h1 class="center-block">
                <strong><%= @article.title %></strong>
            </h1>
            <ul class="clearfix">
                <li class="sub">
                    <p class="author"><span class="label">Author:</span> <%= @article.author %></p>
                    <p class="published-date"><span class="label">Published_at:</span> <%= @article.published_at %></p>
                </li>
                <li class="favo">
                    <div id='favorite'><%= render 'favorites/favorite', article: @article %></div>
                </li>
            </ul>
            <p class="content"><span class="label">Content:</span> <%= @article.content %></p>
            <p class="url"><span class="label">Link:</span><br><%= link_to @article.article_url do %><%= @article.article_url %><% end %></p>
        </div>
    </div>
</div>
<div class="popup">
    <div class="popup-content">
        <h2 id="word"></h2>
        <h2 id="description"></h2>
        <button class="close">Close</button>
    </div>
</div>