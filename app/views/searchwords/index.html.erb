    <thead>
            <tr class="table-header">
                <th>English</th>
                <th>Japanese</th>
                <th></th>
            </tr>
    </thead>
    <tbody>
        <% @words.each do |word| %>
            <tr class="active">
                <td><%= word.word_name %></td>
                <td><%= word.word_meaning %></td>
                <td>
                    <%= link_to user_searchword_path(current_user.id, word.id), method: :delete do %>
                        <i class="btn btn-warning">âœ–</i>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>