<h1 class="seachword-title">Search Words</h1>
<% if @words.present? %>
    <table class="table">
        <thead>
                <tr class="table-header">
                    <th>English</th>
                    <th>Japanese</th>
                    <th></th>
                </tr>
        </thead>
        <tbody>
            <% @words.each do |word| %>
                <tr class="active" id="search-#{word.id}">
                    <td><%= word.word_name %></td>
                    <td><%= word.word_meaning %></td>
                    <td>
                        <%= link_to user_searchword_path(current_user.id, word.id), method: :delete, remote: true do %>
                            <i class="btn btn-warning">✖</i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <h2 style="margin-left: 100px;">検索ワードがありません</h2>
<% end %>