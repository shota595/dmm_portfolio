<div class="container">
  <div class="row">
    <div class="login-container">
      <h2 class="login-title">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "✉Email" %>
        </div>

        <div class="field form-field">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-font", placeholder: "🗝Password" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <div class="actions">
        <button class="tosignup"><%= render "users/shared/links" %></button>
      </div>
    </div>
  </div>
</div>
