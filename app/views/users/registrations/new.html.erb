<div class="container">
  <div class="row">
    <div class="signup-container">
      <h2 class="login-title">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-field">
          <%= f.text_field :name, placeholder: "✉Email" %>
        </div>

        <div class="field form-field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "🗝Password(6 characters)" %><br />
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

        <div class="field form-field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "🗝Confirm Password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
      
      <div class="actions">
        <button class="tosignup"><%= render "users/shared/links" %></button>
      </div>
    </div>
  </div>
</div>
